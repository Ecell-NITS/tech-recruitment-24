generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model TechApplication {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String  
  scholarId String @unique
  number  String
  domain    Domain @default(Web)
  resumeUrl String
  githubUrl String? 
}

enum Domain{
  Web
  Flutter
  UI
}

model Otp {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   
  otp     String
  createdAt DateTime @default(now())
}